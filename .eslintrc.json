{
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "plugins": ["import"],
  "rules": {
    "import/no-unresolved": "off",
    "import/extensions": ["error", { "js": "never", "ts": "never", "json": "always" }],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true, "destructuredArrayIgnorePattern": "^_" }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "extends": ["eslint:recommended", "plugin:import/recommended", "plugin:import/typescript", "prettier"],
      "plugins": ["@typescript-eslint", "import"],
      "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
          "jsx": true
        },
        "project": ["./tsconfig.json"]
      },
      "settings": {
        "import/resolver": {
          "typescript": true,
          "node": true
        }
      },
      "rules": {
        "no-empty-function": "off",
        "no-undef": "off"
      }
    },
    {
      "files": ["test/**", "**/__mocks__/**"],
      "plugins": ["jest", "testing-library"],
      "extends": [],
      "env": {
        "jest/globals": true
      },
      "rules": {}
    },
    {
      "files": ["**/resources/**", "**/app/**"],
      "globals": {
        "window": true,
        "document": true
      },
      "env": {
        "browser": true,
        "es6": true
      }
    }
  ]
}
