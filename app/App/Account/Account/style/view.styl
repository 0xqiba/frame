.accountView
  position absolute
  top 160px
  right 8px
  bottom 140px
  left 8px
  border-radius 16px
  z-index 4
  display flex
  justify-content center
  align-items center
  border-radius 20px
  transition var(--standard)
  display flex
  justify-content center
  align-items center

  .accountViewMenu
    position absolute
    top 6px
    right 6px
    left 6px
    height 48px
    background var(--ghostA)
    border-radius 16px
    box-shadow 0px 8px 16px var(--ghostY)
    z-index 5

    .accountViewTitle
      position absolute
      top 0
      right 0
      bottom 0
      left 0px
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      letter-spacing 2px
      font-weight 500
      pointer-events none
      font-family 'Exo2'

      .accountViewIcon
        pointer-events none
        transform translate3d(0, 0, 0)
        position relative
        top 2px

      .accountViewText
        margin-left 12px
        font-size 12px

    .accountViewBack
      position absolute
      top 5px
      left 5px
      height 32px
      width 48px
      border-radius 12px
      display flex
      justify-content center
      align-items center
      -webkit-app-region no-drag
      transition none
      pointer-events auto
      transform translate3d(0, 0, 0)
      background var(--ghostB)
      cursor pointer
      border 3px solid var(--ghostZ)
      *
        pointer-events none

    .accountViewBack:hover
      background var(--ghostC)

  .accountViewMain
    position absolute
    top 40px
    right 0px
    left 0px
    bottom 0px
    animation-delay 0.08s
    z-index 3
    border-bottom-left-radius 20px
    border-bottom-right-radius 20px
